<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="RoundButton">
        <attr name="color" format="color"/>
        <attr name="size" format="dimension"/>
        <attr name="src" format="reference"/>
        <attr name="txt" format="string"/>
    </declare-styleable>

    <declare-styleable name="AvatarImageView">

        <attr name="buttonPosition">
            <enum name="top" value="1" />
            <enum name="bottom" value="2" />
            <enum name="left" value="3" />
            <enum name="right" value="4" />
            <enum name="topLeft" value="5" />
            <enum name="topRight" value="6" />
            <enum name="bottomLeft" value="7" />
            <enum name="bottomRight" value="8" />
        </attr>

        <attr name="avatarSrc" format="reference"/>
        <attr name="hasBorder" format="boolean"/>
        <attr name="buttonColor" format="color"/>
        <attr name="avatarSize" format="dimension"/>
        <attr name="buttonSize" format="dimension"/>
        <attr name="buttonSrc" format="reference"/>

    </declare-styleable>

</resources>